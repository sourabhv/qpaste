doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        title="QPaste - Quick Pasting library"
        link(rel="stylesheet", href="//cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css")
        link(rel="stylesheet", href="//fonts.googleapis.com/css?family=Lato|Source+Code+Pro|Bree+Serif")
        link(rel="stylesheet", href="/css/style.css")
        script(src="https://www.dropbox.com/static/api/2/dropins.js" id="dropboxjs" data-app-key="gysptsh1tb1z5gn")
        script(src="/js/keyboard.min.js")
    body
        header
            h1.left QPaste
            h2.right &#10084;
                div#lovebox
                    a#github-fork(href="https://github.com/sourabhv/qpaste")
                        img(src="https://camo.githubusercontent.com/c6286ade715e9bea433b4705870de482a654f78a/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f6c6566745f77686974655f6666666666662e706e67"
                            alt="Fork me on GitHub"
                            data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_left_white_ffffff.png"
                        )
                    p.one Thanks for using QPaste
                    - if (typeof(content) !== 'undefined') {
                        a#dropbox.dropbox-saver(href="/#{id}/raw.txt")
                        br
                    - }
                    p.tip Tip: Try <code>/&lt;file-ext&gt;</code> to set lexer of the snippet
                    p.example Example: <code>/py</code> for python
            textarea#snippet-url(rows=1, spellcheck="false", readonly, style="display:none")
            .clear
        main
            - if (typeof(content) !== 'undefined') {
                pre#code-display #{content}
            - } else {
                textarea#code-edit(placeholder="Your Code Goes Here ...", spellcheck="false", autofocus)
            - }
        footer
            hr
            - if (typeof(content) === 'undefined') {
                p.instruction Press <kbd>Ctrl</kbd> + <kbd>Enter</kbd>  to Paste!
            - } else {
                a.new-paste(href="/") Make a new Paste
            - }
            p.info All pastes expire in 1 week
        script(src="/js/script.js")


